form, .faux_form {
font-size: 10pt;
font-family: "Trebuchet MS", Helvetica, Verdana, Arial, sans-serif;
color:#485561;
padding: 0 20px 20px 20px;
}
#functions form {
padding: 0;
color: #FFF;
font-size: 100%;
}
.searchbox form {
padding: 0;
font-size: 100%;
}

.fields {
clear:both;
padding: 10px 0;
background: url(<%= asset_path "cms/dashed.gif" %>) repeat-x 100% 100%;
}

/* Fake forms */
.faux_form .fields {
padding: 22px 0 10px 0;
font-size: 12px;
overflow: hidden;
}
.faux_form .fields .label {
padding: 0 0 12px 0;
float: left;
width: 140px;
font-weight: bold;
}

/* LABELS */
.text_fields label,
.textarea_fields label,
.select_fields label,
.file_fields label
{
padding: 12px 0;
float:left;
width:140px;
font-size: 12px;
}

.checkbox_group label,
.text_fields label,
.textarea_fields label,
.select_fields label,
.text_editor_fields label,
.file_fields label,
.checkboxes label,
.faux_label
 {
font-weight: bold;
font-size: 12px;
}

.checkbox_group label {
  width: 140px; 
  float: left; 
  padding: 12px 0;
}

.checkbox_group .checkboxes {
  float: left; 
  width: 445px;
  padding-top: 12px;
}

.checkbox_group .checkboxes .checkbox_fields label {
  padding-left: 20px;
}

/* SELECT */
.select_fields select {
margin: 7px 0 5px 0;
width:445px;
padding: 8px 0;
border: 1px solid #CCC;
}

/* TEXT AND TEXT AREA */
.text_fields,
.checkbox_group {
padding: 8px 0;
}
 
.text_fields input, .select_fields input,
.textarea_fields textarea, .file_fields input.mock {
width:445px;
padding: 4px 5px;
border: 1px solid #CCC;
}

.text_fields input, .select_fields input {
height: 15px;
}

.textarea_fields textarea {
height: 100px;
margin-bottom: 10px;
}

.text_editor_fields select {
margin-left: 380px;
* margin-left: 386px;
}
.text_editor_fields .selectbox{
font-size: 8pt;
color:#485561; 
border: 1px solid #CCCCCC;
height: 16px;
margin-left: 397px;
* margin-top: 3px;
* margin-left: 361px;
}
.text_editor_fields label {
* display: block;
* float: left;
* margin-top: 6px;
* line-height: 10pt;
}
.text_editor_fields .selectbox-wrapper {
margin-left: 415px;
color: #485561;
font-size: 8pt;
* margin:  28px 0px 0px -135px;
* padding-right: 6px;
}
.text_editor_fields textarea {
height: 338px;
width: 595px;
margin-top: 10px;
border: 1px solid #CCC;
}
.text_editor_fields .select_label {
margin-left: 380px;
margin-right: -374px;
}
.text_editor_fields label {
* line-height: 14pt;
}
.text_editor_fields br {
* line-height: 20pt;
}
/* CHECKBOX */
.checkbox_fields,
.check_uncheck {
/*
margin-left: 136px;
* margin-left: 140px;
*/
clear: both;
}
.checkbox_fields label,
.check_uncheck {
display: block;
padding: 4px 0;
}
.no_check_all {
padding-bottom: 26px;
}
.checkbox_fields label span {
display: block;
float: left;
width: 500px;
padding: 1px 5px;
* padding-top: 4px;
line-height: 15px;
}
.checkbox_fields input {
float: left;
}

.file_fields div.file_inputs {
    padding-bottom: 2px;
    position:relative;
}

.file_fields .fakefile {
    position:absolute;
    top:0;
    left:0;
    z-index:1;
    display:inline;
    margin-left: 140px;
}
.file_fields input.fancy_file {
opacity: 0;
filter: alpha(opacity=0);
position: relative;
text-align:right;
z-index: 2;
}

.file_fields input.mock {
opacity: 1;
filter: alpha(opacity=100);
position: absolute;
width: 378px;
padding: 5px;
margin-top: 2px;
z-index:1;
}
.file_fields img {
position: absolute;
margin: 3px 0 0 397px;
}

/* BUTTONS */
.buttons {
padding: 10px 0 20px 0;
margin-left: 140px;
}

div.lt_button input.submit,
button {
border-width: 0;
background: #4C82C0 url(<%= asset_path "cms/lt_button_bg.gif" %>) repeat 0 0;
height: 25px;
color: white;
font-weight: bold;
font-size: 9px;
padding: 0 0 3px 0;
* padding: 0 0 0 0;
margin: 0 5px;
* margin-left: 1px;
text-transform: uppercase;
}

div.lt_button div{
background: #4C82C0 url(<%= asset_path "cms/lt_button_bg.gif" %>) repeat 0 0;
float: left;
}

div.lt_button {
padding: 0px;
}

div.lt_button img {
float: left;
padding: 0;
margin: 0;
}


/* ERRORS */
.fieldWithErrors input, .fieldWithErrors select, .fieldWithErrors textarea {
border: 1px solid red;
}

#errorExplanation h2 {
font-weight: bold;
margin-bottom: 10px;
}
#errorExplanation li {
font-weight: bold;
color: red;
margin: 8px 0;
}

.instructions { 
  color: #666; 
  font-style: italic; 
  font-size: 80%; 
  font-weight: normal; 
  padding-top: 5px;
  float: left;
  clear: left;
  margin-left: 140px;
}

.checkboxes .instructions {
  margin-left: 0;
}
