<!DOCTYPE html>
<html>
  <head>
    <meta http-equiv="Content-Type" content="text/html;charset=utf-8" />
    <title><%= @page_title %></title>
    <%= stylesheet_link_tag 'cms/application', 'cms/page_editor' %>
    <%= javascript_include_tag 'cms/toolbar' %>
    <%= csrf_meta_tags %>
    <% if protect_against_forgery? %><script type="text/javascript">
      jQuery(function($){
        $.cms.authenticity_token = '<%= form_authenticity_token %>'
      })
    </script><% end %>    
    <%= yield :html_head %>
  </head>
  <body>
  <%= render 'layouts/cms/thin_toolbar' %>
  <%= yield %>
  </body>
</html>
