<% @link_title = @page_title = "Add New Link to Sitemap" %>
<% content_for :functions do %>
<%= "<h1>#{ @page_title }</h1>" %> 
<%= link_to(span_tag("list all"), cms_sitemap_path, :class => "button") %>
<br clear="all"/>
<% end %>
<% form_for(@link, :url => cms_path(:links, :create)) do |f| %>
  <%= hidden_field_tag :section_id, @link.section_id %>
  <% @tabindex = 0 %>
  <%= render :partial => 'form', :locals => {:f => f} %>
  <div class="buttons">
    <%= lt_button_wrapper(%Q{<button type="submit" name="link[publish_on_save]" value="true" class="submit" tabindex="#{(@tabindex += 1)}"><span>Save And Publish</span></button>}) %>
    <%= lt_button_wrapper(f.submit("Save", :class => "submit", :tabindex => (@tabindex += 1) )) %>
  </div>
<% end %>
