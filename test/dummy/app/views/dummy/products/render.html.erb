<dl>
  <dt>Name:</dt><dd><%= show :name %></dd>
  <dt>Price:</dt><dd><%= show :price %></dd>
  <dt>Photo 2 Link:</dt><dd><%= link_to "Photo 2", attachment_path_for(@content_block.photo_2) %></dd>
  <dt>Photo 2 Image:</dt><dd><%= tag :img,
          :src => attachment_path_for(@content_block.photo_2),
          :alt => h(@content_block.name),
          :data => { :type => "photo-2" } %></dd>
  <dt>Photo 1:</dt><dd><%= tag :img,
          :src => attachment_path_for(@content_block.photo_1),
          :alt => h(@content_block.name),
          :data => { :type => "photo-1" } %></dd>

</dl>
